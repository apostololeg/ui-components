@import 'theme'

body
  background-color var(--decent-color)

.root
  display flex
  height 100vh
  max-width 800px
  margin 0 auto

.configBar
  display flex
  padding 10px
  margin-bottom 30px

.colorPicker
  display none

.activeColor
  background-color var(--active-color)
  height 20px
  width 20px
  border-radius inherit

.nav
  position relative
  display flex
  flex-direction column
  min-width 200px
  padding-bittom 100px
  box-shadow inset -2px 0 0 var(--accent-color)
  overflow-y auto

  &::before
  &::after
    content ''
    position absolute
    left 0
    right 2px
    height 100px
    pointer-events none
    z-index 1

  &::before
    top 0
    background-image linear-gradient(var(--bg-color), transparent)

  &::after
    bottom 0
    background-image linear-gradient(transparent, var(--bg-color))

.navItem
  text-align right
  padding var(--indent-s) var(--indent-l) 0
  font-size 20px

.content
  flex-grow 1
  overflow-x auto
  padding-left 50px
  margin-top 50px

.cfgButton
  border-radius 50%
