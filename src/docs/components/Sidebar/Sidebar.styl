.root
  display flex
  flex-direction column
  align-items flex-end
  padding-left 20px
  overflow hidden

.item
.itemContentInner
  display flex
  flex-direction column

.item
  flex-grow 1
  width 100%
  overflow hidden
  min-height 44px

.itemHeader
  z-index 1
  justify-content space-between

.itemContent
  padding 0 var(--indent-s) var(--indent-s)
  margin-right 10px

.itemInnerContent
  flex-direction column

.link
  display inline-block
  text-align right
  font-size 140%

  &.sub
    font-size 120%
