@import 'theme';

.header
  z-index 3
  position sticky
  top 0
  display flex
  align-items center
  min-height 2.4em
  padding 0 var(--indent-l)
  flex-shrink 0
  border-radius 0 0 10px 10px
  line-height 1.2em
  overflow hidden
  border 2px solid var(--decent-color)
  box-shadow inset 0 0 0 1px var(--decent-color), 0 0 0 1px var(--decent-color)

  &::before
    content ''
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    backdrop-filter blur(20px)
    background-color var(--decent-color-alpha-300)
    transform scale(1.5)
    z-index -1
    pointer-events none

  @media(max-width: $tablet)
    padding-right 60px

.title
  z-index 1
  position sticky
  top 0
  padding-left var(--indent-m)
  background-color var(--decent-color-alpha-800)
  backdrop-filter blur(10px)

.inner
  padding 0 var(--indent-l) var(--indent-l)

  @media (max-width: $tablet)
    padding 0 var(--indent-m) var(--indent-m)

.root
  pre,
  code
    font-family monospace
    display inline-block
    background-color var(--accent-color-alpha-50)
    box-shadow inset 0 0 0 1px var(--accent-color-alpha-50)
  pre
    border-radius 3px
    padding .2em .4em
    margin .2em
  code
    border-radius 5px
    margin .5em .2em
    padding .4em .6em
    white-space pre-wrap
