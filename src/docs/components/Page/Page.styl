@import 'theme';

.title
  z-index 1
  position sticky
  top 0
  padding-left var(--indent-l)
  background-color var(--decent-color-alpha-800)
  backdrop-filter blur(10px)

  @media (max-width: $tablet)
    padding-left 60px

.inner
  padding 0 var(--indent-l) var(--indent-l)

  @media (max-width: $tablet)
    padding 0 var(--indent-m) var(--indent-m)

.root
  pre,
  code
    font-family monospace
    display inline-block
    background-color var(--accent-color-alpha-50)
    box-shadow inset 0 0 0 1px var(--accent-color-alpha-50)
  pre
    border-radius 3px
    padding .2em .4em
    margin .2em
  code
    border-radius 5px
    margin .5em .2em
    padding .4em .6em
    white-space pre-wrap
