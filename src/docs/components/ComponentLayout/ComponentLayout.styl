@import 'theme';

.root
  display flex
  flex-direction column
  flex-grow 1
  margin-bottom var(--indent-s)
  overflow hidden

  @media(min-width: $tablet)
    margin-bottom var(--indent-l)

.header
  position sticky
  top 0
  display flex
  align-items center
  justify-content space-between
  padding var(--indent-m) 0 var(--indent-m)

  @media(max-width: $tablet)
    padding-left 50px
