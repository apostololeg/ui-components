@import 'theme';

.root
  display flex
  flex-direction column
  flex-grow 1
  overflow hidden

  h2 + table
    margin-top calc(-1 * var(--indent-l))

  p
    margin var(--indent-s) 0

    &:first-child
      margin-top 0

  td, th
    &:first-child
      text-align right

  ul
    display block
    padding-left var(--indent-l)

  li
    margin var(--indent-s) 0

.inner
  display flex
  flex-direction column
  height 100%

.headerItem
  position relative

.headerSubItem
  display inline-block

.headerLink
  margin-left -5px
  padding-top 0
  padding-bottom 0

.title
  padding 0

  &::before
    content none !important

.subtitle
  width 100%
  padding-left 4px
  padding-bottom var(--indent-m)
  margin-top -1em
  line-height 1.2em
  font-size 80%

.api
  flex-grow unset !important

.content
  // display flex
  flex-grow 1
  // overflow hidden
  padding-top 0
  // padding-bottom 50px

  // @media(min-width: $tablet)
  //   padding 0 var(--indent-l)
  //   margin-bottom var(--indent-l)

.required
  white-space nowrap

.sidebarItemGroup
  padding 4px
  padding-left 0
  padding-top var(--indent-s)
