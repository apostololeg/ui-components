@import 'theme';

.root
  display flex
  flex-direction column
  flex-grow 1
  overflow hidden

  h2 + table
    margin-top calc(-1 * var(--indent-l))

  p
    margin var(--indent-s) 0

    &:first-child
      margin-top 0

  table
    border-radius var(--border-radius-l)
    box-shadow 0 0 0 2px var(--accent-color-alpha-100)
    overflow hidden

    thead
      position relative

    tr:not(:first-child)
      box-shadow inset 0 1px 0 0 var(--accent-color-alpha-100)

    td, th
      padding var(--indent-s)
      min-width 5em
      text-align left

      &:first-child
        text-align right

    th
      padding-bottom 16px
      background-color var(--accent-color-alpha-100)

      &:first-child::before
        content ''
        position absolute
        left 0
        bottom -2px
        display block
        height 5px
        width 100%
        background var(--decent-color)
        border-radius 5px 5px 0 0

    td
      vertical-align top


  ul
    display block
    padding-left var(--indent-l)

  li
    margin var(--indent-s) 0

.header
  z-index 1
  position sticky
  top 0
  padding 0 var(--indent-l)
  padding-top 20px
  padding-bottom 20px
  flex-shrink 0
  border-radius 0 0 10px 10px
  line-height 1.2em
  overflow hidden
  border 2px solid var(--decent-color)
  box-shadow inset 0 0 0 2px var(--decent-color)

  &::before
    content ''
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    backdrop-filter blur(20px)
    background-color var(--decent-color-alpha-300)
    transform scale(1.5)
    z-index -1

  @media(max-width: $tablet)
    padding-right 60px

.headerItem
  position relative

.headerSubItem
  display inline-block

.headerLink
  margin-left -5px
  padding-top 0
  padding-bottom 0

.title
  padding 0

  &::before
    content none !important

.subtitle
  width 100%
  padding-left 4px
  padding-bottom var(--indent-m)
  margin-top -1em
  line-height 1.2em
  font-size 80%

.api
  flex-grow unset !important

.content
  // display flex
  // flex-grow 1
  // overflow hidden
  padding-top 0
  padding-bottom 50px

  // @media(min-width: $tablet)
