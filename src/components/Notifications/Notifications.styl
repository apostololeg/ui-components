@import '../../theme'

$width = 300px
$height = 80px
$duration = 200ms
$padding = 10px
$paddingBottom = 30px

.root
  z-index 20
  position absolute
  top 10px
  right 0
  width 300px
  padding-left var(--indent-s)
  padding-right var(--indent-s)
  transition transform .3s ease-out
  overflow hidden
  max-height calc(100% - 20px)

  &.paused
    transform translateX(-3px)

.empty
  pointer-events none

.item
.itemInner
  border-radius var(--border-radius-l)

.item
  padding-right 10px
  max-height 0 // animate `height:auto` â€“ https://stackoverflow.com/a/8331169/2131453
  width $width
  max-width 100%
  transform translateX(100%)
  transform translate3d(100%, 0, 0)
  transition all $duration ease-out
  backface-visibility hidden

  & + &
    padding-top 10px

  &:active
    transform scale(.99)

.visible
  max-height 500px
  transform translateX(0)

.itemInner
  position relative
  display flex
  align-items center
  padding 16px 32px 16px 20px
  box-sizing border-box
  background-color var(--accent-color-alpha-100)
  backdrop-filter blur(50px)
  box-shadow inset 0 0 0 1px var(--accent-color-alpha-100)
  transition transform $duration ease-out

  .type-warning &
    background-color var(--warning-color-alpha-100)

  .type-danger &
    background-color var(--danger-color-alpha-100)

.icon
  height 24px
  width 24px
  min-width 24px
  background no-repeat center
  margin-right 10px

.type-loading .icon
  transform translateY(-20px)

.text
  display flex
  flex-direction column
  flex-grow 1
  z-index 1

.title
  font-size 16px
  font-weight bold

.content
  font-size 12px
  margin-top 'calc(%s / 2)' % var(--indent-s)

  &:first-child
    margin-top 0

.close
  position absolute
  right -5px
  top -5px
  height 40px !important
  width @height
  max-height @height
  max-width @width
  border-radius 50%
  transition .1s ease-out
  transition-property opacity, background-color
  background-color transparent
  cursor pointer
  opacity .8

  &:hover
    opacity 1
    background-color var(--decent-color-alpha-200)

@media (max-width: $tablet)
  .root
  .item
    width 100%


  .title
    font-size 20px
  .content
    font-size 16px

  .close
    transform scale(1.2)
