@import '~src/theme.styl'

$hoverColor = @css{ color(var(--active-color) lighten(40%)) }
$selectedColor = @css{ var(--active-color) }

accent(color, bgColor)
  box-shadow inset 6px 0 0 -3px color
  background-color bgColor

  .right &
    box-shadow inset -6px 0 0 -3px color

.root:not(.horizontal)
  display flex
  flex-direction column

.item
  position relative
  display inline-flex
  align-items centeru
  user-select none
  white-space nowrap
  background-size 20px
  background-position-y center
  background-repeat no-repeat
  transition box-shadow .2s ease-out
  transform-origin 0 center

  &.clickable
    cursor pointer

    &:active
    &.selected:hover
      transform scale(0.98)

.padded .item
  padding 5px var(--indent-s)

.paddedX .item
  padding 0 var(--indent-s)

.highlighted .item

  &:hover
    accent(var(--active-color), $hoverColor)

  &.selected
    accent(var(--active-color), $selectedColor)

.right .item
  justify-content flex-end

