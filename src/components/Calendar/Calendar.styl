@import '../../theme'

.size-s
  font-size 0.5em

.size-m
  font-size .75em

.size-l
  font-size 1em

.root
  display flex
  flex-direction column

.header
  display flex
  align-items center
  justify-content space-between

.month
  width 100%

.year
  min-width 5em
  input
    min-width unset

.month
  margin-left var(--indent-s)

.weekDays
  display flex
  align-items center
  width 100%
  margin-top var(--indent-s)
  font-size 0.75em
  color var(--accent-color-alpha-500)

  & .day
    padding 1.5em 0

    .size-s &
      &:first-child
        border-top-left-radius $borderRadiusS
      &:last-child
        border-top-right-radius $borderRadiusS
    .size-m &
      &:first-child
        border-top-left-radius $borderRadiusM
      &:last-child
        border-top-right-radius $borderRadiusM
    .size-l &
      &:first-child
        border-top-left-radius $borderRadiusL
      &:last-child
        border-top-right-radius $borderRadiusL

.days
  display flex
  flex-wrap wrap
  justify-content space-between
  user-select none

  .day
    &:not(.currMonth)
      color var(--accent-color-alpha-500)

      .hideOtherMonthDays &
        opacity 0
        pointer-events none

    &:first-child
      .size-s &
        border-top-left-radius $borderRadiusS
      .size-m &
        border-top-left-radius $borderRadiusM
      .size-l &
        border-top-left-radius $borderRadiusL

    &:last-child
      .size-s &
        border-bottom-right-radius $borderRadiusS
      .size-m &
        border-bottom-right-radius $borderRadiusM
      .size-l &
        border-bottom-right-radius $borderRadiusL

    &:nth-child(7)
      .size-s &
        border-top-right-radius $borderRadiusS
      .size-m &
        border-top-right-radius $borderRadiusM
      .size-l &
        border-top-right-radius $borderRadiusL

    &:nth-last-child(7)
      .size-s &
        border-bottom-left-radius $borderRadiusS
      .size-m &
        border-bottom-left-radius $borderRadiusM
      .size-l &
        border-bottom-left-radius $borderRadiusL

.day
  display flex
  justify-content center
  align-items center
  width calc(100% / 7)
  min-width unset
  height 2em
  padding 0

  &.disabled
    pointer-events none
    opacity .3
    background-color var(--accent-color-alpha-100)
    border-radius 0

  &.selected
    background-color var(--active-color-alpha-500) !important

  // &.weekend
  //   background-color var(--accent-color-alpha-50)

  &.currMonth
    font-weight bold


:global(.pointer) .day:focus
  background-color transparent
