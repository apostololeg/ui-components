@import '../../theme'

.root
  position relative

.border
  position absolute
  left 0
  top 0
  height 100%
  width 100%
  pointer-events none
  border-radius inherit

  .variant-outlined &
    controlButtonVariant('outlined')

    &:hover
      controlButtonVariantHover('outlined')


.variant-default .border
  controlButtonVariant('default')
  background-color var(--accent-color-alpha-100)

  &:hover
    controlButtonVariantHover('default')

.label
  display flex
  align-items center
  position absolute
  height 100%

.inner
  max-height inherit

.items
  display flex
  align-items center
  flex-wrap wrap
  width calc(100% + 8px)
  margin -4px
  font-size 0

.item
  position relative
  display inline-flex
  margin 4px

  &:first-child:last-child
    width 100%

  .size-s &
    height 50px
    width 50px

    &
    & > div > div
      borderRadiusSize('s')

  .size-m &
    height 70px
    width 70px

    &
    & > div > div
      borderRadiusSize('m')

  .size-l &
    height 100px
    width 100px

    &
    & > div > div
      borderRadiusSize('l')

.addButton
  align-items center
  justify-content center
  position relative
  transition background-color .2s ease-out
  cursor pointer
  background-color var(--active-color-alpha-100)

  &:hover
    background-color var(--active-color-alpha-500)

.input
  position absolute
  top 0
  left 0
  right 0
  bottom 0
  opacity 0
  pointer-events none


.size-s
  controlFontSize('s')

  .border
    borderRadiusSize('s')

  .items
    controlPaddingSize('s')
    padding-top $controlPaddingS
    padding-bottom $controlPaddingS

.size-m
  controlFontSize('m')

  .border
    borderRadiusSize('m')

  .items
    controlPaddingSize('m')
    padding-top $controlPaddingM
    padding-bottom $controlPaddingM

.size-l
  controlFontSize('l')

  .border
    borderRadiusSize('l')

  .items
    controlPaddingSize('l')
    padding-top $controlPaddingL
    padding-bottom $controlPaddingL


.draggable
  width 100%
  position relative

  .item
    cursor move

  .addButton
    margin 0
