@import '../../theme.styl'

.root
  display inline-block
  color inherit
  animation spin .5s linear infinite

.size-s
  height 16px
  width @height
.size-m
  height 20px
  width @height
.size-l
  height 30px
  width @height

@keyframes spin {
  0% {
    transform rotateZ(0deg)
  }
  100% {
    transform rotateZ(360deg)
  }
}
