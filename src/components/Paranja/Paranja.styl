.root
  z-index 10
  position absolute
  top 0
  left 0
  right 0
  bottom 0
  opacity 0
  display flex
  align-items center
  justify-content center
  background-color var(--decent-color-alpha-900)
  transition opacity .2s ease-out
  pointer-events none

.visible
  pointer-events all
  opacity 1

  &.blur
    backdrop-filter blur(50px)
    background-color var(--decent-color-alpha-500)
