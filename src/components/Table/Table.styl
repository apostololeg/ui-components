.root
  position relative
  overflow hidden
  border-radius var(--border-radius-l)
  box-shadow 0 0 0 2px var(--accent-color-alpha-100)

  table
    min-width 100%

  tbody
    overflow auto
    overflow-scrolling touch

  thead
    position sticky
    top 0
    z-index 1

  td
    box-shadow inset 0 1px 0 0 var(--accent-color-alpha-100)

  td, th
    padding var(--indent-s)
    min-width 5em
    text-align left

  th
    padding-bottom 16px
    background-color var(--accent-color-alpha-100)

  td
    vertical-align top

  tr:last-child td
    padding-bottom var(--indent-l) // for scrollbar

.sticky
  position sticky
  left 0
  z-index 1
  background-color var(--decent-color)

  th&
    background-color var(--accent-color)
    color var(--decent-color)

.blur .sticky
  backdrop-filter blur(20px)
  background-color var(--decent-color-alpha-500)

.blur th.sticky
    background-color var(--accent-color-alpha-500)
    color var(--decent-color-alpha-800)
