.root
.item
  width 100%
  height 100%

.root
  position relative
  overflow hidden
  // transform scale(.3)

.inner
  position absolute
  display flex
  width 300%
  height 100%

  &:not(.single)
    transform translate3d(calc(-100% / 3), 0, 0)

.animation
  transition transform 0s ease-out
  backface-visibility hidden

  &.left
  &.right
    transition-duration .2s

  &.left
    transform translate3d(0, 0, 0)

  &.right
    transform translate3d(calc(-100% / 3 * 2), 0, 0)

.item
  display flex
  align-items center
  justify-content center
  background-size contain
  background-position center
  background-repeat no-repeat

  & > img
    opacity 0
    position absolute
    pointer-events none

.brokenImage
  height 50%
  width 50%
  opacity .2

.arr
  position absolute
  top 0
  height 100%
  min-height @height
  width 20%
  transition opacity .1s ease-out
  opacity 0
  background var(--decent-color-alpha-50) !important

  &.left
    left 0

  &.right
    right 0

  &:hover
    opacity 1
