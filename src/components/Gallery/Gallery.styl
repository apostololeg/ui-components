.root
.item
  width 100%
  height 100%

.root
  position relative
  overflow hidden

.inner
  position absolute
  display flex
  height 100%
  width calc(300% + 1px)
  transform translate3d(calc(-100% / 3), 0, 0)
  backface-visibility hidden
  touch-action none

.single

  .inner
    width 100%
    transform unset

  .item
    width 100%

.inner
  &.left
  &.right
    transition transform 0s ease-out
    transition-duration .2s

  &.left
    transform translate3d(0, 0, 0) !important

  &.right
    transform translate3d(calc(-100% / 3 * 2), 0, 0) !important

  &.initialBounce
    animation bounce 1s ease-out

@keyframes bounce
  0%
    left 0
  50%
    left -20%
  80%
    left 10%
  100%
    left 0

.item
  display flex
  align-items center
  justify-content center
  background-size contain
  background-position center
  background-repeat no-repeat
  width calc(100% / 3)

  .cover &
    background-size cover

  & > img
    opacity 0
    position absolute
    pointer-events none

.brokenImage
  height 50%
  width 50%
  opacity .2

.arr
  position absolute
  top 0
  height 100%
  min-height @height
  padding 10%
  transition opacity .1s ease-out
  opacity 0
  background transparent !important

  &.left
    left 0
    justify-content flex-start

  &.right
    right 0
    width 77%
    justify-content flex-end

  &:hover
    opacity 1
